@model ArbolBinario_Farmacia.Models.Pedido

@{
    ViewBag.Title = "Reabastecer";
}

<h2>Productos reabastecidos</h2>

<p>
    @Html.ActionLink("Regresar a PaginaPrincipal", "PaginaPrincipal")
    ||
    |
    ||
    @Html.ActionLink("Regresar a Nuevo Pedido", "NuevoPedido")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Linea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.detalle)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Linea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total_a_Cancelar)
        </td>
        <td>
            @Html.ActionLink("Detalles del Producto", "Details", new { id = item.Linea }) |
        </td>

    </tr>
    }

</table>
